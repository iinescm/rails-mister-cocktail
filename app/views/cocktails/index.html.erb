
<div class="box1">

    <div class="card-lemon col-3" >
      <div>
       <h2 class="maintitle">Ingredient of the week!</h2>
      </div>
        <div class="lemon-container img-container" >
        <%= image_tag "lemon.jpg", id: "photo", width:"100%;" %>
          <div class="overlay">
            <h4 class="ingredientoftheday" style="font-size:5vw;">#LEMON</h4>
          </div>
      </div>
    </div>



    <div class="cards-list col-5" >

      <% @cocktails.each do |cocktail| %>
      <div class="cocktail-container img-cocktail">
         <% if cocktail.photo? %>
          <%= cl_image_tag cocktail.photo.key, height: 300, width: 200, crop: :fill %>
        <% else %>
          <% background_url = 'https://source.unsplash.com/500x400/?cocktail' %>
        <% end %>

        <div class="text-overlay">
             <h2 class= "cocktail-name"> <%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
          </div>
      </div>
      <% end %>



</div>

