<div class="newcocktail">
  <h4 class="newtitle" align="center">Create your own Cocktail</h4>
<div class="row justify-content-center m-3 p-4">
  <div class="col-xs-12 col-lg-4">
  <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.input :photo, as: :file %>
      <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
  <br>
  <%= link_to "Back to the list", cocktails_path, class: "btn btn-primary" %>

  </div>
</div>
</div>
